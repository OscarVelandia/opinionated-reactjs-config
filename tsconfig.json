{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "types": ["vite/client"],
    "baseUrl": "./src",
    "paths": {
      "@components": ["./components"],
      "@features/*": ["./features/*"],
      "@hooks": ["./hooks"],
      "@pages": ["./pages"],
      "@services": ["./services"],
      "@store": ["./store"],
      "@utils": ["./utils"],
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ],
}